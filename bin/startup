#!/bin/sh
set -ue

key()
{
	# see /usr/include/X11/keysymdef.h, /usr/include/X11/XF86keysym.h
	xdotool key --clearmodifiers "$@"
}

type()
{
	xdotool type --clearmodifiers "$@"
}

~/.xinitrc

key super+1
firefox &
while [ `xdotool search --onlyvisible --name "Firefox" | wc -l` -ne 1 ]; do :; done

key super+2
env-mapdone

key super+3
env-mapdone-playground

key super+4
zeal &
while [ `xdotool search --onlyvisible --name "Zeal" | wc -l` -ne 1 ]; do :; done

keynav & # ctrl+; hjkl, shift+hjkl, space

key super+1 # get rid of the red outlined desktop since firefox has loaded and wants attention
key super+2
