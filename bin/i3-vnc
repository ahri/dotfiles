#!/bin/sh
set -ue

screen_width=1920
screen_height=1080

vnc_top_height=64
windows_bar_height=60

x11_width=$screen_width
x11_height=`expr $screen_height - $vnc_top_height - $windows_bar_height`

mapdone-kill
Xvfb -screen 0 "${x11_width}x${x11_height}x16" -ac &
export DISPLAY=:0
i3 &
x11vnc -safer -forever -repeat
