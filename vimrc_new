set nocompatible              " be iMproved, required
filetype off                  " required

" $ mkdir -p ~/.vim/bundle && git clone https://github.com/gmarik/Vundle.vim.git ~/.vim/bundle/Vundle.vim

" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

" let Vundle manage Vundle
Plugin 'gmarik/Vundle.vim'

" See http://vim-scripts.org
" See https://github.com/vim-scripts/
Plugin 'bling/vim-airline'
let g:airline_powerline_fonts = 1
set laststatus=2

" ### colorscheme
Plugin 'KevinGoodsell/vim-csexact'
Plugin 'tomasr/molokai'
Plugin 'nanotech/jellybeans.vim'

" ### Source Control
Plugin 'airblade/vim-gitgutter'

" ### Usability
if !empty(glob($HOME . "/.vim/bundle/vimproc.vim/autoload/vimproc_linux64.so"))
	Plugin 'Shougo/vimproc.vim'
endif
Plugin 'Shougo/unite.vim'
nnoremap <C-p> :Unite file_rec/async<cr>
nnoremap <space>/ :Unite grep:.<cr>
let g:unite_source_history_yank_enable = 1
nnoremap <space>y :Unite history/yank<cr>
nnoremap <space>s :Unite -quick-match buffer<cr>

" ### code highlighting
Plugin 'markdown'
Plugin 'html5.vim'
Plugin 'pangloss/vim-javascript'
Plugin 'jelera/vim-javascript-syntax'

call vundle#end()
filetype plugin indent on " has to be after bundles

set background=dark
syntax on
colorscheme jellybeans
set bs=2


